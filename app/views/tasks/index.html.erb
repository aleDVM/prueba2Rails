<div class="container">

	<div class="row">
		<% @tasks.each do |task|%>
		<div class="col-4">
		
			<div class="card card-inverse card-danger mb-3 text-center">
				<%= image_tag task.photo, class: 'card-img-top', style: 'height: 250px'%>	
				<div class="card-block">
					<h3 class="card-title"><%= task.title%></h3>	
					
					<%@t.each do |t|%>
						<% if t.id== task.id%>
							<%if t.id%>
								<%= link_to 'Completada', task_path(task), class: "btn btn-primary", method: :patch %>
							<%end%>
							<%break%>	
						<%end%>	

								
					<%end%>	
							<%= link_to 'No completada', task_solutions_path(task.id), class: "btn btn-danger",  method: :post %>				
												
					<%= link_to 'Detalle tarea',  task_solutions_path(task.id) , class: "btn btn-secondary" %>					
					
				</div>
		
			</div>

		</div>
	<% end%>
	</div>

</div>